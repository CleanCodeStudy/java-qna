{{#partial "content" }}


    <!-- Begin Page Content -->
    <div class="container-fluid">

        <div class="row">

            <div class="col-lg-12">

                <!-- Basic Card Example -->
                <form action="/questions/{{questionId}}/answers" method="post">
                    <div class="card h-500 shadow mb-4" style="min-height: 25rem;">
                        <div class="card-header py-3">
                            <h1>Question {{questionId}}에 대한 댓글 추가</h1>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <div class="input-group mb-0 col-6">
                                        <input id="title" name="title" height="20rem" type="text"
                                               class="form-control"
                                               placeholder="Input Title" aria-label="Input Title"
                                               aria-describedby="basic-addon2">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group shadow-textarea">
                                            <textarea class="form-control z-depth-1" id="contentTextArea"
                                                      rows="3" name="content"
                                                      placeholder="Write something here..."></textarea>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <div class="row justify-content-end">
                                <div class="col">
                                    <button id="questionSave" height="20rem" type="submit"
                                            class="btn btn-primary btn-icon-split col-1">
                                        write
                                    </button>
                                </div>
                            </div>
                        </div>
                </form>
            </div>

        </div>

    </div>
    <!-- /.container-fluid -->



{{/partial}}

{{> application_html/base}}
