<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>No</th>
                <th>Title</th>
                <th>author</th>
                <th>Register date</th>
                <th>update date</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {{#question.answers}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{author}}</td>
                    <td>{{registerDate}}</td>
                    <td>{{updateDate}}</td>
                    <td><a href="/answer/{{id}}" class="btn btn-info btn-circle btn-sm">
